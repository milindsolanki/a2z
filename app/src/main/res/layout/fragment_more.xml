<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragments.more.MoreFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_more"
                    android:layout_width="match_parent"
                    android:onClick="@{clickListener::onClick}"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rv_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_more_profile"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="121dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_chair" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/iv_more_profile"
                            android:layout_centerHorizontal="true"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_more_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:gravity="center"
                                android:text="@string/addhamo"
                                android:textSize="@dimen/_15sdp" />

                            <RatingBar
                                android:id="@+id/rb_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_more_title"
                                android:layout_centerHorizontal="true"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:scaleX="0.6"
                                android:scaleY="0.6" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rv_profile"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_user" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/profile"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout

                            android:id="@+id/ll_moreinfo_notification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_notification" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/notification"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_changepwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_changepwd" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/changpwd"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_histroy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_history" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/transactionhistroy"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_trackdriver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_track_driver" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/trackdriver"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_termsNcondition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_document" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/termsand"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_privacy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_privacy" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/privacy"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_invitefriends"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_invite" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/invite"
                                    android:textColor="@color/color_c1c1c1"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_moreinfo_logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="center"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_logout" />

                            <LinearLayout
                                android:id="@+id/btn_logout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@string/logout"
                                    android:textColor="@color/color_c1c1c1"

                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_font`}" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>