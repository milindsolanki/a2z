<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        tools:context=".activities.sendItem.SendActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <include
                    android:id="@+id/homeHeader"
                    layout="@layout/header_layout" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scroll_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_send_picupAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="@string/picuplocation"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_15sdp" />


                            <TextView
                                android:id="@+id/tv_send_picupAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_forward"
                                android:gravity="center_vertical"
                                android:hint="@string/selectpicup"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/color_c1c1c1" />

                        <LinearLayout
                            android:id="@+id/ll_send_deliveryAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clickListener::onClick}"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="@string/deliverylocation"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_15sdp" />


                            <TextView
                                android:id="@+id/tv_send_deliveryAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_forward"
                                android:gravity="center_vertical"
                                android:hint="@string/Selectdelivery"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/color_c1c1c1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/howbigyouritem"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <LinearLayout
                            android:id="@+id/layout_send_icon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <LinearLayout
                                android:id="@+id/ll_send_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="@{clickListener::onClick}">

                                <ImageView
                                    android:id="@+id/iv_send_small"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/ic_keyblack" />

                                <TextView
                                    android:id="@+id/tv_send_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/small"
                                    android:textColor="@color/color_c1c1c1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_send_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="@{clickListener::onClick}">

                                <ImageView
                                    android:id="@+id/iv_send_medium"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/ic_boxblack" />

                                <TextView
                                    android:id="@+id/tv_send_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/meduim"
                                    android:textColor="@color/color_c1c1c1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_send_large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="@{clickListener::onClick}">

                                <ImageView
                                    android:id="@+id/iv_send_large"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/ic_tvblack" />

                                <TextView
                                    android:id="@+id/tv_send_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/large"
                                    android:textColor="@color/color_c1c1c1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_send_xLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="@{clickListener::onClick}">

                                <ImageView
                                    android:id="@+id/iv_send_xLarge"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/ic_cycleblack" />

                                <TextView
                                    android:id="@+id/tv_send_xLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/xlarge"
                                    android:textColor="@color/color_c1c1c1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_send_huge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="@{clickListener::onClick}">

                                <ImageView
                                    android:id="@+id/iv_send_huge"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/ic_sofablack" />

                                <TextView
                                    android:id="@+id/tv_send_huge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/huge"
                                    android:textColor="@color/color_c1c1c1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_send_pet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="@{clickListener::onClick}">

                                <ImageView
                                    android:id="@+id/iv_send_pet"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/ic_petblack" />

                                <TextView
                                    android:id="@+id/tv_send_pet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/pet"
                                    android:textColor="@color/color_c1c1c1" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_send_icontxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/et_send_itemname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/itemname"
                            android:inputType="text"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_send_itemvalue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/itemvalue"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="@string/valuetext"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/grossweight"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/et_send_gross"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/totalWeight"
                            android:inputType="text|number"
                            android:maxLines="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/dimension"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/et_send_lenght"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/length"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/inch"
                                    android:textSize="@dimen/_13sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/et_send_width"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/width"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/inch"
                                    android:textSize="@dimen/_13sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/et_send_height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/height"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/inch"
                                    android:textSize="@dimen/_13sdp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/uploadpicture"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">

                                <ImageView
                                    android:id="@+id/iv_send_uploadCamera"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:onClick="@{clickListener::onClick}"
                                    android:src="@drawable/ic_camera_picker" />
                            </LinearLayout>
                            <!---->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_send_uploadImage"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/ic_placeholder_image"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/whowillmeet"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <RadioGroup
                            android:id="@+id/radiogroup_pickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <RadioButton
                                android:id="@+id/rb_send_myself"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:checked="true"
                                android:onClick="@{clickListener::onClick}"
                                android:text="@string/iwillpassmyself" />

                            <RadioButton
                                android:id="@+id/rb_send_someone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:onClick="@{clickListener::onClick}"
                                android:text="@string/someoneelseon" />
                        </RadioGroup>

                        <EditText
                            android:id="@+id/et_send_namelocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_send_M_Nolocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:hint="@string/mobilenumber"
                            android:inputType="number"
                            android:maxLines="1"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_send_emaillocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:hint="@string/emailid"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/whoisreceivi"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <RadioGroup
                            android:id="@+id/radiogroup_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <RadioButton
                                android:id="@+id/rb_send_Iwill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:checked="true"
                                android:onClick="@{clickListener::onClick}"
                                android:text="@string/iwill" />

                            <RadioButton
                                android:id="@+id/rb_send_someElse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:onClick="@{clickListener::onClick}"
                                android:text="@string/someoneelse" />
                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/latestpickuptime"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <RadioButton
                                android:id="@+id/rb_pickup_immediate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:checked="true"
                                android:onClick="@{clickListener::onClick}"
                                android:text="@string/immediate" />

                            <RadioButton
                                android:id="@+id/rb_pickup_chooseTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:onClick="@{clickListener::onClick}"
                                android:text="@string/dateandtimeselectfrom" />
                        </RadioGroup>

                        <EditText
                            android:id="@+id/et_send_nameDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_send_mNoDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:hint="@string/mobilenumber"
                            android:inputType="number"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_send_emailDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:hint="@string/emailid"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/latestreceivitem"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/et_send_date_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="@string/dateandtimeselectfrom"
                            android:onClick="@{clickListener::onClick}" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/extradetails"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/et_send_extra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/handlewithcareoretc" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_send_viewsummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/btn_ripple"
                            android:onClick="@{clickListener::onClick}"
                            android:text="@string/viewsummary"
                            android:textColor="@color/color_ffffff" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</layout>