<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="item"
            type="com.a2z.deliver.models.items.ItemDetails" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <include
                    android:id="@+id/layoutHeaderItemSummary"
                    layout="@layout/header_layout" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:id="@+id/progressbar_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Summary"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_20sdp"
                            app:font="@{`app_font`}" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingBottom="@dimen/_10sdp"
                                android:text="Total Distance"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_15sdp"
                                app:font="@{`app_font`}" />

                            <TextView
                                android:id="@+id/tv_summary_km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="@{item.totalDistance}"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_20sdp"
                                app:font="@{`app_font`}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5sdp"
                                android:text="km"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_15sdp"
                                app:font="@{`app_font`}" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_long"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@color/color_ffffff"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/iv_long_itemSizeImage"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:contentDescription="@string/todo" />

                                    <TextView
                                        android:id="@+id/tv_long_itemSize"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:text="@{item.itemType}"
                                        android:textColor="@color/color_3e3e3e"
                                        android:textSize="@dimen/_15sdp"
                                        app:font="@{`app_font`}" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:id="@+id/tv_long_itemDescription"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_50sdp"
                                        android:textAlignment="center"
                                        android:gravity="center"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:text="this is a sample description"
                                        android:textColor="@color/color_3e3e3e"
                                        android:textSize="@dimen/_15sdp"
                                        app:font="@{`app_font`}" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_long_itemImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_150sdp"
                                    android:src="@{item.itemImage}" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_long_itemName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{item.itemName}"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_17sdp"
                                    app:font="@{`app_fontBold`}" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:paddingBottom="@dimen/_5sdp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_dots_small"
                                            android:layout_marginTop="@dimen/_4sdp"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="@dimen/_220sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_long_pickupAdd"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@{item.pickupAddress.fullAddress}"
                                            android:textColor="@color/color_3e3e3e"
                                            android:textSize="@dimen/_15sdp" />

                                        <TextView
                                            android:id="@+id/tv_long_deliveryAdd"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_15sdp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@{item.deliveryAddress.fullAddress}"
                                            android:textColor="@color/color_3e3e3e"
                                            android:textSize="@dimen/_15sdp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right">

                                        <ImageView
                                            android:id="@+id/iv_long_map"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_summary_map" />

                                    </LinearLayout>

                                </LinearLayout>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="@string/pickuptime"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_fontBold`}" />

                                <TextView
                                    android:id="@+id/tv_long_pickupTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableLeft="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@{item.sendingTime}"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_13sdp"
                                    app:font="@{`app_font`}" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="@string/deliverytime"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_fontBold`}" />

                                <TextView
                                    android:id="@+id/tv_long_deliveryTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableLeft="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@{item.receivingTime}"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_13sdp"
                                    app:font="@{`app_font`}" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="@string/extradetails"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_15sdp"
                                    app:font="@{`app_fontBold`}" />

                                <TextView
                                    android:id="@+id/tv_long_extraDetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableLeft="@drawable/ic_forward"
                                    android:gravity="center_vertical"
                                    android:text="@{item.extraDetails}"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_13sdp"
                                    app:font="@{`app_font`}" />


                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_interest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/btn_ripple"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="@string/iaminterested"
                                android:textAlignment="center"
                                android:onClick="@{clickListener::onClick}"
                                android:textColor="@color/white"
                                app:font="@{`app_fontbold`}" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

</layout>