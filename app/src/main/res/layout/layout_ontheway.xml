<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.a2z.deliver.models.onTheWay.OnTheWayDetails" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/layout_ontheway"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_item_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@{item.itemImage}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{item.itemName}"
                        android:textColor="@color/color_3e3e3e"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        app:font="@{`app_font`}"
                        tools:text="abc" />

                    <LinearLayout
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/ic_dots_tiny" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_topickupAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{item.pickupAddress.fullAddress}"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_15sdp"
                                app:font="@{`app_font`}"
                                tools:text="@string/showfulldetails" />

                            <TextView
                                android:id="@+id/tv_todeliverAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="@{item.deliveryAddress.fullAddress}"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_15sdp"
                                app:font="@{`app_font`}"
                                tools:text="@string/showfulldetails" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{item.totalDistance}"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        app:font="@{`app_font`}"
                        tools:text="1021" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{item.distanceUnit}"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp"
                        app:font="@{`app_font`}"
                        tools:text="KM" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>