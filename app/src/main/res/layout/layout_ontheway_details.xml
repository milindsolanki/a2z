<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_ffffff">
    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="item"
            type="com.a2z.deliver.models.onTheWay.OnTheWayDetails"/>

    </data>

    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Summary"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_20sdp"
                app:font="@{`app_font`}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Total Distance"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/_15sdp"
                    app:font="@{`app_font`}" />

                <TextView
                    android:id="@+id/tv_summary_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@{item.totalDistance}"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/_20sdp"
                    app:font="@{`app_font`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="km"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/_15sdp"
                    app:font="@{`app_font`}" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_long_itemSizeImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_placeholder_image" />

                <TextView
                    android:id="@+id/tv_long_itemSize"
                    android:layout_width="wrap_content"
                    android:text="@{item.itemType}"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/color_3e3e3e" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_long_itemDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="this is a sample description"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_long_itemImage"
                android:layout_width="match_parent"
                android:contentDescription="@string/todo"
                android:layout_height="@dimen/_150sdp"
                android:src="@{item.itemImage}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_long_itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_dots_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_long_pickupAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{item.pickupAddress.blockAddress}"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_3e3e3e"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/tv_long_deliveryAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:ellipsize="end"
                        android:text="@{item.deliveryAddress.blockAddress}"
                        android:maxLines="1"
                        android:textColor="@color/color_3e3e3e"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_long_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_summary_map" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/personatpickuplocation"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold"
                app:font="@{`app_fontBold`}" />

            <TextView
                android:id="@+id/tv_pickup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/tv_pickup_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/tv_pickup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/personatdeliverylocation"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_deliver_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/tv_deliver_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/tv_deliver_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/pickuptime"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_long_pickupTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:text="@{item.sendingTime}"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/deliverytime"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_long_deliveryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_forward"
                android:gravity="center_vertical"
                android:text="@{item.receivingTime}"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/extradetails"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_long_extraDetails"
                android:layout_width="match_parent"
                android:text="@{item.extraDetails}"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/color_3e3e3e"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>
    </LinearLayout>
</layout>