<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.a2z.deliver.models.items.ItemDetails" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_item"
                    android:src="@{item.itemImage}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="bottom"
                    android:background="@color/Black_transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvItemKm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_item_location"
                            app:font="@{`app_font`}"
                            android:textAlignment="center"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dots_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_item_sourceAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{item.pickupAddress.blockAddress}"
                        android:textColor="@color/color_3e3e3e"
                        app:font="@{`app_font`}"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/tv_item_destinationAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:text="@{item.deliveryAddress.blockAddress}"
                        android:textColor="@color/color_3e3e3e"
                        app:font="@{`app_font`}"
                        android:maxLines="1"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:textColor="@color/color_3e3e3e"
                    app:font="@{`app_font`}"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_2sdp"
                    android:drawableLeft="@drawable/ic_color_clock"
                    android:drawablePadding="@dimen/_2sdp"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tv_item_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:font="@{`app_font`}"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/color_3e3e3e"
                    android:drawableLeft="@drawable/ic_item_xlarge"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="X-large"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
