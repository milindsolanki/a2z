<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <include
                    android:id="@+id/layoutHeader"
                    layout="@layout/header_layout" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_profileimage"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_placeholder_image" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_3e3e3e"
                        android:textSize="@dimen/_15sdp"
                        app:font="@{`app_fontBold`}"
                        android:text="User Name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/color_3e3e3e"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:font="@{`app_font`}"
                        android:textColor="@color/color_3e3e3e"
                        android:textSize="@dimen/_15sdp"
                        android:text="Driver Licence:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_placeholder_image" />

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_placeholder_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_driver_verified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:font="@{`app_font`}"
                                android:onClick="@{clickListener::onClick}"
                                android:paddingRight="@dimen/_13sdp"
                                android:text="Verified"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_12sdp" />

                            <RadioButton
                                android:id="@+id/rb_driver_unverified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{clickListener::onClick}"
                                app:font="@{`app_font`}"
                                android:text="Unverified"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_12sdp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_driverlicence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:font="@{`app_font`}"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:inputType="text"
                    android:hint="Explain why you have marked this Unverified!"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_c1c1c1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_3e3e3e"
                        app:font="@{`app_font`}"
                        android:textSize="@dimen/_15sdp"
                        android:text="Vehicle Registration Book:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_placeholder_image" />

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_placeholder_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_vehicle_verified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_13sdp"
                                android:onClick="@{clickListener::onClick}"
                                android:text="Verified"
                                app:font="@{`app_font`}"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_12sdp" />

                            <RadioButton
                                android:id="@+id/rb_vehicle_unverified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unverified"
                                android:onClick="@{clickListener::onClick}"
                                app:font="@{`app_font`}"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_12sdp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_vehicleRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:visibility="gone"
                    android:inputType="text"
                    app:font="@{`app_font`}"
                    android:hint="Explain why you have marked this Unverified!"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_c1c1c1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_3e3e3e"
                        app:font="@{`app_font`}"
                        android:textSize="@dimen/_15sdp"
                        android:text="ID Proof:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_placeholder_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_idproof_verified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:font="@{`app_font`}"
                                android:onClick="@{clickListener::onClick}"
                                android:paddingRight="@dimen/_13sdp"
                                android:text="Verified"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_12sdp" />

                            <RadioButton
                                android:id="@+id/rb_idproof_unverified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:font="@{`app_font`}"
                                android:text="Unverified"
                                android:onClick="@{clickListener::onClick}"
                                android:textColor="@color/color_3e3e3e"
                                android:textSize="@dimen/_12sdp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_idproof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:font="@{`app_font`}"
                    android:inputType="text"
                    android:hint="Explain why you have marked this Unverified!"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_c1c1c1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_3e3e3e"
                        app:font="@{`app_font`}"
                        android:textSize="@dimen/_15sdp"
                        android:text="Insurance Policy:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:src="@drawable/ic_placeholder_image" />

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/ic_placeholder_image" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:src="@drawable/ic_placeholder_image" />

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/ic_placeholder_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/rb_policy_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_13sdp"
                                    app:font="@{`app_font`}"
                                    android:onClick="@{clickListener::onClick}"
                                    android:text="Verified"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_12sdp" />

                                <RadioButton
                                    android:id="@+id/rb_policy_unverified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unverified"
                                    android:onClick="@{clickListener::onClick}"
                                    app:font="@{`app_font`}"
                                    android:textColor="@color/color_3e3e3e"
                                    android:textSize="@dimen/_12sdp" />

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_insurancePolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:visibility="gone"
                        android:inputType="text"
                        app:font="@{`app_font`}"
                        android:hint="Explain why you have marked this Unverified!"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <Button
                            android:text="@string/done"
                            android:textAllCaps="false"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/_15sdp"
                            app:font="@{`app_font`}"
                            android:onClick="@{clickListener::onClick}"
                            android:background="@drawable/btn_ripple"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>