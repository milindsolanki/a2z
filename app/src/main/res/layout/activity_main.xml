<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_splashscreen"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Black_transparent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_skip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:background="@color/Black_transparent"
                            android:paddingBottom="@dimen/_4sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:text="@string/skip"
                            android:onClick="@{clickListener::onClick}"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/_13sdp"
                            app:font="@{`app_font`}"
                            />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_23sdp"
                        android:src="@drawable/ic_logo" />

                    <Button
                        android:id="@+id/btn_googlesignup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@color/color_de4b38"
                        android:drawableLeft="@drawable/ic_googlelogo"
                        android:text="@string/signup_google"
                        android:textAllCaps="false"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_15sdp"
                        app:font="@{`app_font`}"
                        android:onClick="@{clickListener::onClick}"
                        />

                    <Button
                        android:id="@+id/btn_facebooksignup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/color_39589d"
                        android:drawableLeft="@drawable/ic_fblogo"
                        android:text="@string/signup_facebook"
                        android:textAllCaps="false"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_15sdp"
                        android:onClick="@{clickListener::onClick}"/>

                    <Button
                        android:id="@+id/btn_signup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white_transparent"
                        android:drawableLeft="@drawable/ic_emaillogo"
                        android:text="@string/signup_email"
                        android:textAllCaps="false"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_15sdp"
                        android:onClick="@{clickListener::onClick}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:text="@string/alreadyRegistered"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_13sdp"
                        app:font="@{`app_font`}"
                        />

                    <Button
                        android:id="@+id/btn_loginnow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/custom_btn"
                        android:text="@string/loginnow"
                        android:textAllCaps="false"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:onClick="@{clickListener::onClick}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/terms"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_10sdp"
                        app:font="@{`app_font`}" />


                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</layout>